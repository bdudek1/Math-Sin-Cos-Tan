<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="35dip" />
                <stroke android:width="4dip" android:color="@color/white" />
                <gradient android:angle="-45" android:startColor="@color/silver" android:endColor="@color/Gold"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="35dip" />
                <stroke android:width="4dip" android:color="@color/white" />
                <solid android:color="@color/white"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="35dip" />
                <stroke android:width="4dip" android:color="@color/DarkGray" />
                <gradient android:angle="-45" android:startColor="@color/silver" android:endColor="@color/Gold" />
            </shape>
        </item>
</selector>
